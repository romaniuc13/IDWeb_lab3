@model IEnumerable<Store.Models.Role>
@{
    ViewData["Title"] = "Lista Roli";
}
@{
    await Html.RenderPartialAsync("Partial/_nav_product");
}

<br />

@if (Model.Any())
{
    <a class="btn btn-dark mb-3"
       asp-controller="Administration" asp-action="CreateRole">
        Dodaj nową rolę
    </a>


    foreach (var role in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                Id: @role.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">@role.Name</h5>
            </div>
            <div class="card-footer">
                <a class="btn btn-primary" asp-controller="Administration" asp-action="EditRole" asp-route-id="@role.Id">
                    Edytuj
                </a>
                <a href="#" class="btn btn-danger">Usuń</a>
            </div>

        </div>
    }
}
else
{

    <div class="card">
        <div class="card-header">
            Nie ma żadnych roli
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Użyj przycisku poniżej aby je utworzyć
            </h5>
            <a class="btn btn-primary"
               asp-controller="Administration" asp-action="CreateRole">
                Stwórz rolę
            </a>
        </div>
    </div>


}

