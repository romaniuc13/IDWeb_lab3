@model Store.Models.Color

@{
    ViewData["Title"] = "Formularz koloru";
}

@{
    await Html.RenderPartialAsync("Partial/_nav_product");
}
<hr />
<br />

@using (Html.BeginForm("SaveColor", "Administration"))
{
    @Html.AntiForgeryToken()

    <div class="text-danger">@Html.ValidationSummary()</div>
    <div class="form-row">
        <div class="form-group col-md-3">
            @Html.LabelFor(x => x.Name)
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Name)
        </div>
    </div>

    <br />
    {
        if (Model.Name == null)
        {
            <button type="submit" class="btn btn-primary">Dodaj nowy kolor</button>
        }
        else
        {
            @Html.HiddenFor(x=>x.Id)
            <button type="submit" class="btn btn-primary">Zapisz</button>

        }
    }
}
<br />

<button type="button" class="btn btn-dark"
        onclick="location.href = '@Url.Action("Color", "Administration")'">
    Wróć do listy
</button>